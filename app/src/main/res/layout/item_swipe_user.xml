<?xml version="1.0" encoding="utf-8"?>
<com.dam.moveyourschool.utils.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeReveal"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center_vertical"
    app:dragFromEdge="right">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="20dp">

            <ImageView
                android:id="@+id/btnEliminar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:clickable="true"
                app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:paddingLeft="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/cardUser"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:clickable="true"
            android:visibility="visible"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:clickable="true">

                <LinearLayout
                    android:id="@+id/linearUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/fotoUsuario"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:scaleType="centerCrop"
                        app:civ_border_color="#FF000000"
                        tools:src="@drawable/idea" />

                    <LinearLayout
                        android:id="@+id/lmText"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bambino_light"
                            android:gravity="bottom"
                            android:paddingLeft="15dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/tvInstituciones"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="15dp" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <ImageView
                android:id="@+id/imgNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_navigate_next_black_24dp" />

            <Button
                android:id="@+id/btnCheck"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_border_green"
                android:visibility="gone" />

        </android.support.v7.widget.CardView>

    </FrameLayout>
</com.dam.moveyourschool.utils.SwipeRevealLayout>
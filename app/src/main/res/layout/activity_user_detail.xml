<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"

        android:id="@+id/scrollUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnEnviarMensaje"
        android:layout_marginBottom="91dp">

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="122dp" />

            <de.hdodenhof.circleimageview.CircleImageView

                android:id="@+id/profile"
                android:layout_width="200dp"
                android:layout_height="200dp"


                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:elevation="5dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/idea"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp" />

            <RelativeLayout
                android:id="@+id/profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_below="@+id/view"

                android:paddingBottom="24dp">


                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="36dp"
                    android:layout_height="42dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:clickable="true"

                    android:onClick="editProfile"
                    app:srcCompat="@drawable/ic_create_black_24dp" />

                <TextView
                    android:id="@+id/tvTitular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="70dp"
                    android:fontFamily="@font/bambino_light"
                    android:text="Â¿No tienes Nombre?"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvinstitucion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTitular"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/bambino_light"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearDesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/profile_layout"
                android:orientation="vertical"
                android:weightSum="10">


                <TextView
                    android:id="@+id/tvDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/slubby"
                    android:text="Quienes Somos:"
                    android:textColor="@color/blue_pastel"
                    android:textSize="20sp" />

                <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/expand_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    expandableTextView:animDuration="200"
                    expandableTextView:collapseDrawable="@drawable/ic_collapse_large_holo_light"
                    expandableTextView:expandDrawable="@drawable/ic_expand_large_holo_light"
                    expandableTextView:maxCollapsedLines="3">

                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/bambino_light"
                        android:textColor="#666666"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:background="@android:color/transparent"
                        android:padding="16dp" />
                </com.ms.square.android.expandabletextview.ExpandableTextView>

                <TextView
                    android:id="@+id/tvMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/slubby"
                    android:text="Nuestro Correo:"
                    android:textColor="@color/blue_pastel"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvMailRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bambino_light"
                    android:text="ordasraul@gmail.com"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvdir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/slubby"
                    android:text="Nos encontramos en:"
                    android:textColor="@color/blue_pastel"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvDirRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bambino_light"
                    android:text="Paseo del Prado 57"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvLocalidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/slubby"
                    android:text="Localidad:"
                    android:textColor="@color/blue_pastel"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvLocRes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bambino_light"
                    android:text="Madrid"
                    android:textSize="16sp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:visibility="gone"
                    app:srcCompat="@android:drawable/ic_dialog_email" />

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/btnEnviarMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_pastel"
        android:fontFamily="@font/bambino_light"
        android:onClick="enviarMensaje"
        android:text="@string/TXT_ENVIAR_MENSAJE"
        android:textColor="@android:color/white" />

</RelativeLayout>


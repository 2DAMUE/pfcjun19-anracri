<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollUserEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="20dp"
    android:paddingRight="16dp"
    tools:context=".activities.UserEdit">

    <LinearLayout
        android:layout_width="match_parent"
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iconAdd"
                android:layout_width="44dp"
                android:layout_height="52dp"
                android:layout_centerHorizontal="false"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:onClick="onPickImage"
                app:srcCompat="@drawable/ic_add_circle_black_24dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgEdit"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:elevation="5dp"
                android:onClick="onPickImage"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/idea"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="3dp" />

        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etxNomEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/bambino_light"
                android:hint="Nombre Empresa o Institucion"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etxCif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bambino_light"
                android:drawablePadding="10dp"
                android:hint="Cif"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

            <EditText
                android:id="@+id/etxTitular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/bambino_light"
                android:hint="Nombre Representante"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

            <EditText
                android:id="@+id/etxDir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bambino_light"
                android:drawablePadding="10dp"
                android:hint="Direccion"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>




        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Spinner
                android:id="@+id/spinnerLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >

            <EditText
                android:id="@+id/etxMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/bambino_light"
                android:hint="Municipio"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etxPostal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:fontFamily="@font/bambino_light"
                android:hint="Codigo Postal"
                android:inputType="text"
                android:textColor="@color/blue_pastel" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etxDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bambino_light"
                android:drawablePadding="10dp"
                android:hint="Descripcion"
                android:inputType="textMultiLine"
                android:textColor="@color/blue_pastel" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/button_border"
            android:fontFamily="@font/bambino_light"
            android:onClick="guardarCambios"
            android:text="GUARDAR CAMBIOS"
            android:textColor="@android:color/background_light" />


    </LinearLayout>
</ScrollView>